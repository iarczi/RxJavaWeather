<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/location"
        android:key="@string/location_key"
        android:defaultValue="@string/location_default"
        android:inputType="text"
        android:singleLine="true" />
    <ListPreference
        android:title="@string/units"
        android:key="@string/units_key"
        android:defaultValue="@string/units_metric"
        android:dialogTitle="@string/units_dialog_title"
        android:entries="@array/preference_units_entries"
        android:entryValues="@array/preference_units_entries_values" />
</PreferenceScreen>